<Window x:Class="GE2D3D.MapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GE2D3D.MapEditor.Modules.SceneViewer.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="GE 2D3D Map Editor"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">

        <!-- File Menu (uses window DataContext = SceneViewModel) -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">

                <MenuItem Header="_New"
                          Command="{Binding NewLevelCommand}" />

                <MenuItem Header="_Open..."
                          Command="{Binding OpenLevelCommand}" />

                <MenuItem Header="_Save"
                          Command="{Binding SaveLevelCommand}" />

                <Separator/>

                <MenuItem Header="E_xit"
                          Click="OnExitClick" />
            </MenuItem>

            <MenuItem Header="_Toolbox">

                <!-- Skybox submenu -->
                <MenuItem Header="_Skybox">
                    <MenuItem Header="Skybox _Inner..."
                              Command="{Binding ChooseSkyboxInnerTextureCommand}" />
                    <MenuItem Header="Skybox _Outer..."
                              Command="{Binding ChooseSkyboxOuterTextureCommand}" />
                </MenuItem>

                <Separator/>

                <!-- Tool windows -->
                <MenuItem Header="_Assets"
                          Click="OnAssetsMenuClick" />
                <MenuItem Header="_Camera Path"
                          Click="OnCameraPathMenuClick" />
                <MenuItem Header="_Selection"
                          Click="OnSelectionMenuClick" />
                <MenuItem Header="_Entities"
                          Click="OnEntitiesMenuClick" />

                <Separator/>

                <!-- Layers submenu -->
                <MenuItem Header="_Layers">
                    <MenuItem Header="_Geometry"
                              IsCheckable="True"
                              IsChecked="{Binding ShowGeometry, Mode=TwoWay}" />
                    <MenuItem Header="_Grid"
                              IsCheckable="True"
                              IsChecked="{Binding ShowGrid, Mode=TwoWay}" />
                    <MenuItem Header="_Collision"
                              IsCheckable="True"
                              IsChecked="{Binding ShowCollision, Mode=TwoWay}" />
                    <MenuItem Header="_Props"
                              IsCheckable="True"
                              IsChecked="{Binding ShowProps, Mode=TwoWay}" />
                    <MenuItem Header="_Lights"
                              IsCheckable="True"
                              IsChecked="{Binding ShowLights, Mode=TwoWay}" />
                    <MenuItem Header="_Triggers"
                              IsCheckable="True"
                              IsChecked="{Binding ShowTriggers, Mode=TwoWay}" />
                </MenuItem>

                <Separator/>

                <!-- Anti-aliasing submenu -->
                <MenuItem Header="_Anti-Aliasing">
                    <MenuItem Header="_None"
                              Tag="None"
                              Click="OnAAModeMenuClick" />
                    <MenuItem Header="_FXAA"
                              Tag="FXAA"
                              Click="OnAAModeMenuClick" />
                    <MenuItem Header="_MSAA"
                              Tag="MSAA"
                              Click="OnAAModeMenuClick" />
                    <MenuItem Header="_SSAA"
                              Tag="SSAA"
                              Click="OnAAModeMenuClick" />
                </MenuItem>

            </MenuItem>

        </Menu>

        <!-- 3D Scene: inherits the same DataContext (SceneViewModel) -->
        <views:SceneView x:Name="SceneViewControl" />

    </DockPanel>
</Window>