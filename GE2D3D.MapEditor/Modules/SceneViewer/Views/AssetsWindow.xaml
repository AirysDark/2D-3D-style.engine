<Window x:Class="GE2D3D.MapEditor.Modules.SceneViewer.Views.AssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assets"
        Width="360"
        Height="520"
        WindowStartupLocation="CenterOwner">

    <Border Padding="4"
            BorderThickness="1"
            BorderBrush="#333333"
            Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Simple filter/search can be added later; for now, just a label. -->
            <TextBlock Grid.Row="0"
                       Text="Available Prefabs:"
                       FontWeight="Bold"
                       Margin="0,0,0,4" />

            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Prefabs}"
                     SelectedItem="{Binding SelectedPrefab, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical"
                                    Margin="0,2,0,2">
                            <TextBlock FontWeight="Bold"
                                       Text="{Binding Name, Mode=OneWay}" />
                            <TextBlock FontSize="10"
                                       Foreground="#AAAAAA">
                                <Run Text="Model ID: " />
                                <Run Text="{Binding ModelId, Mode=OneWay}" />
                                <Run Text="  " />
                                <Run Text="{Binding Category, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>