<Window x:Class="GE2D3D.MapEditor.Modules.SceneViewer.Views.CameraPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Path"
        Width="360"
        Height="520"
        WindowStartupLocation="CenterOwner">
    <Border Padding="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Margin="0,0,0,4">
                        <Button Content="Record"
                                Margin="0,0,4,0"
                                Command="{Binding StartCameraPathRecordingCommand}" />
                        <Button Content="Stop Rec"
                                Margin="0,0,4,0"
                                Command="{Binding StopCameraPathRecordingCommand}" />
                        <Button Content="Play"
                                Margin="0,0,4,0"
                                Command="{Binding PlayCameraPathCommand}" />
                        <Button Content="Stop"
                                Margin="0,0,4,0"
                                Command="{Binding StopCameraPathCommand}" />
                        <Button Content="Clear"
                                Margin="0,0,4,0"
                                Command="{Binding ClearCameraPathCommand}" />
                        <Button Content="Export..."
                                Margin="0,0,4,0"
                                Command="{Binding ExportCameraPathCommand}" />
                        <Button Content="Import..."
                                Command="{Binding ImportCameraPathCommand}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Margin="0,0,0,4">
                        <TextBlock Text="Time:"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="0"
                                Maximum="{Binding CameraPathDuration}"
                                Value="{Binding CameraPathCurrentTime, Mode=TwoWay}"
                                Width="150"
                                Margin="4,0,8,0" />
                        <TextBlock Text="{Binding CameraPathCurrentTime, StringFormat=F2}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBlock Text="Duration:"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding CameraPathDuration, StringFormat=F2}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                        <Button Content="Preview Selected"
                                Margin="8,0,0,0"
                                Command="{Binding PreviewSelectedCameraKeyframeCommand}" />
                    </StackPanel>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding CameraPathKeyframes}"
                              SelectedItem="{Binding SelectedCameraKeyframe, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Height="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time"
                                                Binding="{Binding Time, StringFormat=F3}"
                                                Width="SizeToHeader" />
                            <DataGridTextColumn Header="Position"
                                                Binding="{Binding Position}"
                                                Width="*" />
                            <DataGridTextColumn Header="Target"
                                                Binding="{Binding Target}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
</Window>
