<Window x:Class="GE2D3D.MapEditor.Modules.SceneViewer.Views.EntitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entities"
        Width="360"
        Height="520"
        WindowStartupLocation="CenterOwner">
    <Border Padding="4" BorderThickness="1" BorderBrush="#333333" Margin="0,0,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0"
                             Grid.Column="0"
                             Margin="0,0,4,4"
                             Padding="2"
                             ToolTip="Filter by ID or kind (e.g. Light, Trigger)"
                             Text="{Binding EntityFilterText, UpdateSourceTrigger=PropertyChanged}" />

                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              Width="100"
                              Margin="0,0,0,4"
                              Padding="2"
                              SelectedValuePath="Content"
                              SelectedValue="{Binding EntityKindFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="(All)" />
                        <ComboBoxItem Content="Entity" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Trigger" />
                        <ComboBoxItem Content="Collision" />
                    </ComboBox>

                    <ListBox Grid.Row="1"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             ItemsSource="{Binding Entities}"
                             SelectedItem="{Binding SelectedEntityListItem}"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,2,0,2">
                                    <TextBlock FontWeight="Bold"
                                               Text="{Binding EntityId}" />
                                    <TextBlock FontSize="10"
                                               Foreground="#AAAAAA">
                                        <Run Text="ID: " />
                                        <Run Text="{Binding Id}" />
                                        <Run Text="  " />
                                        <Run Text="{Binding Kind}" />
                                    </TextBlock>
                                    <TextBlock FontSize="10"
                                               Foreground="#CCCCCC"
                                               Text="{Binding Position}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
</Window>
